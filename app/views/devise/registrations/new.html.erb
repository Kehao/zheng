<div class="span6 offset3">
  <div class="page-header">
    <h2>注册</h2>
  </div>

  <%= simple_form_for(resource, :as => resource_name,:wrapper => :bootstrap,:url => registration_path(resource_name),:html => {:class => 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,  :required => true, :autofocus => true %>
      <%= f.input :email, :required => true, :autofocus => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <%= f.input :institution_id,:collection =>Institution.all.map{|i|[i.name,i.id]}.push(["其它",nil]),:label =>"机构",:include_blank =>false%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "注 册", :class => 'btn btn-primary' %>
      <%= link_to "登 录", new_session_path("user"), :class => "btn" %>
    </div>
  <% end %>

  <%#= render :partial => "devise/shared/links" %>
</div>
