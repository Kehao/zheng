<div class="span6 offset3">
  <div class="page-header">
    <h2>用户登录</h2>
  </div>
  <%= simple_form_for(resource, :as => resource_name,:wrapper => :bootstrap, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="form-inputs">
      <%= f.input :name,  :autofocus => true %>
      <%= f.input :password  %>
      <%= f.input :remember_me, label:false,inline_label: "记住登录状态", :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "登 录", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <%#= render :partial => "devise/shared/links" %>
</div>
