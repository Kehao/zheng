        /= link_to "编辑",    new_or_edit_credit(@company), :class=>"btn"
    = render "shared/company_info_nav"
    
    .row.span10.pull-left{:style=>"margin-left:2em"}
      = render "companies/company_tabs",:company=>@company
      
