#business_companies_income_total_yearly
:javascript
  dates=#{@companies_income_total_yearly.keys}
  values=#{@companies_income_total_yearly.values}
  $(function () {
        $('#business_companies_income_total_yearly').highcharts({
            chart: {
                plotBackgroundColor: "#dddddd",
                borderWidth:1,
                borderColor:"#dddddd",
                type: 'spline',
                marginRight: 130,
                marginBottom: 40

            },
            credits: {
              href: "http://radar.sme.gov.cn/",
              text: "征信中心"
            },

            title: {
              text: '#{@companies_income_total_yearly.keys.first}到#{@companies_income_total_yearly.keys.last}',
                x: -20 //center
            },
            subtitle: {
                text: '年度公司销售收入总额',
                x: -20
            },
            xAxis: {
              labels: {rotation: -25,	align: 'right',	style: { font: 'normal 13px Verdana, sans-serif'}},
              categories: dates 
            },
            yAxis: {
                title: {
                    text: '销售收入总额(万元)'
                },
                plotLines: [{
                    value: 0,
                    width: 1,
                    color: '#808080'
                }]
            },
            tooltip: {
                valueSuffix: '万元'
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: -10,
                y: 100,
                borderWidth: 0
            },
            series: [{
                name: '销售改入',
                data: values
            }]
        });
    });
    
