- if company.credit.present?
  - cr = company.credit
  %table.table.table-striped.table-bordered
    %tr
      %th{:colspan=>6}
        人员情况
    %tbody
      - attr_attr = [:epl_count, :master, :bachelor, :junior, :other]
      - attr_attr.each do |item|
        %tr
          %td.span2
            = Credit.human_attribute_name(item) 
          %td.span4
            = cr.send(item)
