= simple_form_for @credit, :html => {:class => 'form-horizontal'} do |f|
  %legend
    经营信息
  - attr_arr = [:main_product, :sales_region, :clients_type, :upstream, :downstream]
  - attr_arr.each do |item|
    = f.input item, as: :text, input_html: {rows: 3}
  = f.input :opt_stage
  .form-actions
    = f.submit "保存信息", class: "btn btn-primary"

