= simple_form_for @credit, :html => {:class => 'form-horizontal'} do |f|
  = f.simple_fields_for :equips, @credit.equips do |b|
    %legend
      主要设备
    = b.hidden_field :_destroy, value: 0
    = b.input :name, input_html: {class: "span2"}
    = b.input :count, input_html: {class: "span2"}
    = b.input :tech, input_html: {class: "span2"}
    = b.input :memo, as: :text, input_html: {rows: 2, class: "span6"}

  .form-actions
    = f.submit "保存信息", class: "btn btn-primary"
