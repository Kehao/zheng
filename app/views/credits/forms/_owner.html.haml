= simple_form_for @credit, :html => {:class => 'form-horizontal'} do |f|
  = hidden_field_tag :tab,tab
  = f.simple_fields_for :operators, @credit.operators do |b|
    %legend
      主要经营者背景
    = b.hidden_field :_destroy, value: 0
    = b.input :category, input_html: {class: "span2"}, include_blank: false
    = b.input :name, input_html: {class: "span2"}
    = b.input :sex, input_html: {class: "span2"}, include_blank: false
    = b.input :birthday
    = b.input :number, input_html: {class: "span2"}
    = b.input :education, input_html: {class: "span2"}
    = b.input :position, input_html: {class: "span2"}
    = b.input :address, input_html: {class: "span2"}
    = b.input :zip, input_html: {class: "span2"}
    = b.input :cv,  input_html: {class: "span6", rows: 5}
    = b.input :negative, input_html: {class: "span6"}
  .form-actions
    = f.submit "保存信息", class: "btn btn-primary"
