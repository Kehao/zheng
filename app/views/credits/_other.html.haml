- if company.credit.present?
  - cr = company.credit
  %table.table.table-striped.table-bordered
    %tr
      %th{:colspan=>6}
        其他信息
    - attr_attr = [:bad_cert, :bad_tax, :bad_social, :bad_trade, :involved_before, :bad_manage]
    - attr_attr.each do |item|
      %tr
        %th.span3
          = Credit.human_attribute_name(item) 
        %td.span1
          = cr.send(item) ? "是" : "否" 
    %tr
      %th= Credit.human_attribute_name(:bad_court)
      %td= company.all_crimes.present? ? "是" : "否" 

- if company.all_crimes.present?
  %h4 案件信息列表
  = render "companies/court", {company: @company}
